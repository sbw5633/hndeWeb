{
  "buildCommand": "chmod +x scripts/build_web.sh && ./scripts/build_web.sh",
  "outputDirectory": "build/web",
  "framework": "flutter",
  "installCommand": "flutter pub get",
  "env": {
    "ENVIRONMENT": "production"
  },
  "functions": {
    "build/web/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/**",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
